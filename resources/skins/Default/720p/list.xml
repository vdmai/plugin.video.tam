<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">500</defaultcontrol>
	<coordinates>
			<system>1</system>
			<posx>0</posx>
			<posy>0</posy>
	</coordinates>
	<controls>
		<!-- background -->
		<control type="image" id="75">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>PTV-bg.jpg</texture>
		</control>
		<control type="image">
			<description>Panel background image</description>
			<posx>30</posx>
			<posy>50</posy>
			<width>1220</width>
			<height>620</height>
			<texture border="12">rcb-ContentPanel3.png</texture>
		</control>
		<control type="label">
			<posx>80r</posx>
			<posy>10</posy>
			<width>300</width>
			<height>35</height>
			<font>font24_title</font>
			<textcolor>FFb4b4b4</textcolor>
			<selectedcolor>selected</selectedcolor>
			<align>left</align>
			<aligny>center</aligny>
			<label>$INFO[System.Time]</label>
		</control>
		
		<control type="button" id="1">
			<posx>1000</posx>
			<posy>70</posy>
			<width>180</width>
			<height>40</height>
			<texturefocus   border="4" colordiffuse="EEFFFFFF">PTV-tab.png</texturefocus>
			<texturenofocus border="4" colordiffuse="EEFFFFFF">PTV-tab_N.png</texturenofocus>
			<label>ОК</label>
			<font>font12</font>
			<align>center</align>
			<textcolor>FF000000</textcolor>
			<focusedcolor>FFFFFFFF</focusedcolor>
			<disabledcolor>80FFFFFF</disabledcolor>
			<invalidcolor>FFFFFFFF</invalidcolor>
			<onclick></onclick>
			<onup>2</onup>
			<ondown>2</ondown>
			<onleft>21</onleft>
			<onright>21</onright>
		</control>
		

